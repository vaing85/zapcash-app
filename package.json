    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.15",
    "concurrently": "^9.2.1",
    "gh-pages": "^6.3.0",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.0"
  },
  "resolutions": {
    "nth-check": "^2.1.1",
    "css-select": "^5.1.0",
    "postcss": "^8.4.31"
  },
  "scripts": {
    "start": "cd backend && node server-simple.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "build:production": "set GENERATE_SOURCEMAP=false && npm run build",
    "preview": "serve -s build -l 3000",
    "deploy:netlify": "netlify deploy --prod --dir=build",
    "deploy:vercel": "vercel --prod",
    "audit:security": "npm audit --audit-level moderate",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "server": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm start\"",
    "deploy": "node scripts/deploy.js",
    "generate-icons": "node scripts/generate-icons.js",
    "build:appstore": "npm run build && npm run generate-icons"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
