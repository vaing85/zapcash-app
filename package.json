    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.17.0",
    "react-scripts": "^5.0.1",
    "react-toastify": "^9.1.3",
    "recharts": "^3.1.2",
    "socket.io": "^4.8.1",
