# Production Environment Variables
# Copy this file to .env.local for local production testing

# Application Configuration
REACT_APP_ENVIRONMENT=production
REACT_APP_VERSION=1.0.0
REACT_APP_NAME=ZapPay
REACT_APP_DESCRIPTION=Lightning fast peer-to-peer payment application

# API Configuration - DigitalOcean Backend
REACT_APP_API_URL=https://zappayapp-ie9d2.ondigitalocean.app
REACT_APP_WEBSOCKET_URL=wss://zappayapp-ie9d2.ondigitalocean.app
REACT_APP_API_TIMEOUT=10000

# Rapyd Configuration (Public Keys)
REACT_APP_RAPYD_ACCESS_KEY=your_rapyd_access_key
REACT_APP_RAPYD_SECRET_KEY=your_rapyd_secret_key
REACT_APP_RAPYD_BASE_URL=https://sandboxapi.rapyd.net
REACT_APP_RAPYD_WEBHOOK_SECRET=your_rapyd_webhook_secret

# Analytics (Optional - Add your tracking IDs)
# REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# REACT_APP_SENTRY_DSN=YOUR_SENTRY_DSN

# Feature Flags (Optional)
# REACT_APP_ENABLE_ANALYTICS=true
# REACT_APP_ENABLE_PWA=true
# REACT_APP_ENABLE_OFFLINE=true

# Security Configuration
REACT_APP_ENABLE_HTTPS_ONLY=true
REACT_APP_ENABLE_CSP=true

# Performance Configuration
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_ENABLE_CODE_SPLITTING=true

# PWA Configuration
REACT_APP_PWA_NAME=ZapPay
REACT_APP_PWA_SHORT_NAME=ZapPay
REACT_APP_PWA_THEME_COLOR=#f59e0b
REACT_APP_PWA_BACKGROUND_COLOR=#ffffff

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
